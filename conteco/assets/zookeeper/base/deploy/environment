#!/usr/bin/env bash

# START SERVICE CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_ZOOKEEPER_ENVIRONMENT,$CONTECO_DC_ZOOKEEPER_COMMAND,$CONTECO_DC_ZOOKEEPER_VOLUMES,$CONTECO_DC_ZOOKEEPER_DEPLOY_MODE,$CONTECO_DC_ZOOKEEPER_DEPLOY_REPLICAS'
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_ZOOKEEPER_ENVIRONMENT="'ZOOKEEPER_CLIENT_PORT=2181','ZOOKEEPER_TICK_TIME=2000'"
export CONTECO_DC_ZOOKEEPER_COMMAND=
export CONTECO_DC_ZOOKEEPER_VOLUMES=
export CONTECO_DC_ZOOKEEPER_DEPLOY_MODE="replicated"
export CONTECO_DC_ZOOKEEPER_DEPLOY_REPLICAS="1"
# END SERVICE CONFIGURATION

# START VARIABLES zookeeper.base
export CONTECO_DC_ZOOKEEPER_PORTS="2181:2181"
export CONTECO_DC_ZOOKEEPER_NETWORKS="${CONTECO_ECOSYSTEM}_overlay"
export CONTECO_DC_ZOOKEEPER_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_ZOOKEEPER_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_ZOOKEEPER_DEPLOY_RESOURCES_LIMITS_MEMORY="384m"
export CONTECO_DC_ZOOKEEPER_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="256m"
# END VARIABLES zookeeper.base

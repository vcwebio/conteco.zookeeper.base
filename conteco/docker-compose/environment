#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS='zookeeper.base'
export CONTECO_DC_GLOBAL_STACKNAMES="zookeeper"
export CONTECO_DC_GLOBAL_VOLUME_LIST="zookeeper_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_ZOOKEEPER_ENVIRONMENT,$CONTECO_DC_ZOOKEEPER_COMMAND,$CONTECO_DC_ZOOKEEPER_PORTS,$CONTECO_DC_ZOOKEEPER_NETWORKS,$CONTECO_DC_ZOOKEEPER_DEPLOY_MODE,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_ZOOKEEPER_ENVIRONMENT="'ZOOKEEPER_CLIENT_PORT=2181','ZOOKEEPER_TICK_TIME=2000'"
export CONTECO_DC_ZOOKEEPER_COMMAND=
export CONTECO_DC_ZOOKEEPER_PORTS=
export CONTECO_DC_ZOOKEEPER_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_ZOOKEEPER_DEPLOY_MODE="replicated"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS zookeeper.base
export CONTECO_DC_ZOOKEEPER_VOLUMES="'${CONTECO_TYPE}_zookeeper_volume:/var/lib/zookeeper/data'"
export CONTECO_DC_ZOOKEEPER_DEPLOY_LABELS=
export CONTECO_DC_ZOOKEEPER_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_ZOOKEEPER_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.1"
export CONTECO_DC_ZOOKEEPER_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export CONTECO_DC_ZOOKEEPER_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="64m"
# END SETTINGS zookeeper.base

# START TOPLEVEL SETTINGS
export CONTECO_DC_GLOBAL_VOLUMES="${CONTECO_TYPE}_zookeeper_volume: { external: true }"
# END TOPLEVEL SETTINGS
